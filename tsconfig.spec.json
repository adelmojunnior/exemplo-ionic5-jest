{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "module": "commonjs",
    "allowJs": true,
  },
  "files": [
    "src/setup-jest.ts",
    "src/test-config.helper.ts",
    "zone-flags.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}